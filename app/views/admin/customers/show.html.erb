<%= form_with model: @customer, local: true do |f| %>
  <div class="field">
   <h6>名前</h6>
   <%= f.label :（姓） %>
   <%= f.text_field :first_name, autofocus: true %>
   <%= f.label :（名） %>
   <%= f.text_field :last_name, autofocus: true %>
  </div>
  
  <div class="field">
   <h6>フリガナ</h6>
   <%= f.label :（セイ） %>
   <%= f.text_field :first_name_kana, autofocus: true %>
   <%= f.label :（メイ） %>
   <%= f.text_field :last_name_kana, autofocus: true %>
  </div>


  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
   <%= f.label :郵便番号（ハイフンなし） %>
   <%= f.text_field :postal_code, autofocus: true %>
  </div>
  
  <div class="field">
   <%= f.label :住所 %>
   <%= f.text_field :address, autofocus: true %>
  </div>
  
  <div class="field">
   <%= f.label :電話番号 %>
   <%= f.text_field :telephone_number, autofocus: true %>
  </div>
  
  <div class="field">
   <th><%= @customer.is_active ? '有効' : '退会' %></th>
  </div>
  
  <%= link_to "編集する", edit_admin_customer_path(@customer) %>
 <% end %>