<h2>商品一覧</h2>
<tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
</tr>

<% @items.each do |item| %>
<div>
    <th><%= item.id %></th>
    <th><%= link_to item.name, admin_item_path(item.id) %></th>
    <th><%= item.genre.name %></th>
    <th><%= item.price %></th>
    <th><%= item.is_active ? '有効' : '退会'%></th>
</div>

<%= paginate @items %>
<% end %>