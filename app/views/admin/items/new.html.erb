<%= form_with model: @item, url: admin_items_path, method: :post, local: true do |f| %>

<h1>商品画像</h1>
<%= f.attachment_field :image %>
<h4>商品新規登録</h4>
<div class="form-group">
  	<label for="item-name">商品名</label>
    <%= f.text_field :name, id:"item-name", class:"form-control" %>
 </div>
 
 <div class="form-group">
   <label for="introduction">商品説明</label>
   <%= f.text_area :introduction, id:"introduction", class:"form-control" %>
 </div>
 
 <div class="field">
   <label for="genre">ジャンル</label>
   <%= f.collection_select :genre_id, Genre.all, :id, :name %>
   </div>
 
 <div class="form-group">
  	<label for="item-price">税抜価格</label>
    <%= f.text_field :price, id:"item-price", class:"form-control" %>
 </div>
 
 
 <div class="form-group">
 	<label for="item-price">販売ステータス</label>
 	<%= f.label :is_active, '販売中', value: 1 %>
 	<%= f.radio_button :is_active, '1' %>
 	
 	<%= f.label :is_active, '販売停止中', value: 0 %>
 	<%= f.radio_button :is_active, '0' %>
 </div>
 
 <%= f.submit "新規登録", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
 
 
 <% end %>
